{
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "rules": {
        "indent": ["warn", 4],
        "quotes": [2, "single"],
        "semi": [1, "always"],
        "comma-dangle": ["error", "never"],
        "space-before-function-paren": ["error", "never"]
    },
    "parserOptions": {
        "ecmaVersion": 6
    }
}